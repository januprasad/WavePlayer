<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:paddingEnd="5dp"
            android:paddingStart="15dp">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/notification_subtitle"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                tools:text="Title" />

            <TextView
                android:id="@+id/notification_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                tools:text="artist" />

            <TextView
                android:id="@+id/notification_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notification_subtitle"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="album" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/notification_previous"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/notification_toggle_play"
                android:background="?android:selectableItemBackground"
                android:src="@mipmap/ic_skip_previous_white_48dp" />

            <ImageView
                android:id="@+id/notification_toggle_play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="?android:selectableItemBackground"
                android:src="@mipmap/ic_play_arrow_white_48dp" />

            <ImageView
                android:id="@+id/notification_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/notification_toggle_play"
                android:background="?android:selectableItemBackground"
                android:src="@mipmap/ic_skip_next_white_48dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>