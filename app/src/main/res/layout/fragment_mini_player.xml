<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mini_player_height"
    android:background="?selectableItemBackground"
    android:padding="@dimen/global_padding">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/song_img"
        android:layout_width="@dimen/mini_player_height"
        android:layout_height="@dimen/mini_player_height"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/mini_player_icon_margin"
        fresco:fadeDuration="300"
        fresco:actualImageScaleType="centerInside"
        fresco:backgroundImage="@android:color/holo_blue_light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/song_img"
        android:layout_toStartOf="@+id/mini_play"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="16sp"
            android:text="@string/no_artist"/>
        <TextView
            android:id="@+id/song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/no_artist"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/mini_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/mini_next"
        android:background="?selectableItemBackgroundBorderless"
        android:tint="@color/accent"
        android:src="@mipmap/uamp_ic_play_arrow_white_48dp"
        android:contentDescription="@string/image_description"/>

    <ImageView
        android:id="@+id/mini_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="?selectableItemBackgroundBorderless"
        android:tint="@color/accent"
        android:src="@mipmap/ic_skip_next_white_48dp"
        android:contentDescription="@string/image_description"/>

</RelativeLayout>